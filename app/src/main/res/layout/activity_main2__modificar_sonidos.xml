<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aaa_i"
    tools:context="com.example.costa.frotiloop.Main2Activity_ModificarSonidos">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="75dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/mute" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="75dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/unmute" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:background="@drawable/radio_edit"
        android:onClick="Salir"
        android:text="@string/Salir"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seekBar_Sonido"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:progressDrawable="@drawable/seekbar_progreso_sonido"
        android:thumb="@drawable/seekbar_thumb_sonido" />

    <TextView
        android:id="@+id/txt_seek_sonido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar_Sonido"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imagen_dialogo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/radio_over"
        android:contentDescription="@string/Ok"
        android:padding="8dp"
        android:src="@drawable/a_over1" />

    <TextView
        android:id="@+id/txt_game_over_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:text="@string/Ok"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_game_over_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingTop="20dp"
        android:text="@string/Ok"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txt_game_over_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:text="@string/Ok"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txt_game_over_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:text="@string/Ok"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txt_game_over_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingTop="15dp"
        android:text="@string/Ok"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="19sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_aceptar_over"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#293249"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

</LinearLayout>